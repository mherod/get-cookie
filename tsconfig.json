{
  "include": ["src/**/*", "scripts/**/*", "*.ts", "examples/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2018", "es2019", "es2020", "es2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"],
      "@browsers/*": ["src/browsers/*"],
      "@cli/*": ["src/cli/*"],
      "@types/*": ["src/types/*"]
    },
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist/**/*",
    "coverage",
    "**/dist/**",
    "**/node_modules/**"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
