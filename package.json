{
  "name": "@mherod/get-cookie",
  "version": "2.0.0-rc.18",
  "description": "Node.js module for querying a local user's Chrome cookie",
  "source": "src/index.ts",
  "bin": "dist/cli.js",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "git clean -fdX && rm -rf node_modules dist && yarn install",
    "build": "parcel build",
    "postbuild": "npm run check",
    "prepare": "npm run build && npm run prettier",
    "test": "jest",
    "prepublish": "npm run build",
    "install:global": "npm run build && npm install --force --global .",
    "prettier": "prettier --write 'src/{**/*,*}.{js,json,ts}'",
    "check": "tsc --noEmit"
  },
  "targets": {
    "main": {},
    "library": {
      "source": "src/index.ts",
      "distDir": "dist",
      "isLibrary": true,
      "engines": {
        "node": "16"
      },
      "sourceMap": true,
      "includeNodeModules": false
    },
    "cli": {
      "source": "src/cli.ts",
      "distDir": "dist",
      "isLibrary": false,
      "engines": {
        "node": "16"
      },
      "sourceMap": false,
      "includeNodeModules": [
        "colorette"
      ]
    }
  },
  "@parcel/transformer-js": {
    "inlineFS": false,
    "inlineEnvironment": true
  },
  "engines": {
    "node": "16"
  },
  "keywords": [],
  "author": "Matthew Herod",
  "license": "ISC",
  "dependencies": {
    "colorette": "^2.0.19",
    "cross-fetch": "^3.1.5",
    "destr": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^7.14.0",
    "minimist": "^1.2.7",
    "sqlite3": "^5.1.2",
    "tough-cookie": "^4.1.2",
    "tough-cookie-file-store": "^2.0.3",
    "user-agents": "^1.0.1178"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.7.0",
    "@parcel/transformer-typescript-types": "^2.7.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.4",
    "@types/tough-cookie": "^4.0.2",
    "@types/user-agents": "^1.0.2",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
