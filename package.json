{
  "name": "@mherod/get-cookie",
  "version": "2.1.3",
  "description": "Node.js module for querying a local user's Chrome cookie",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types.d.ts",
  "bin": {
    "get-cookie": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "clean": "git clean -fdX && rm -rf dist && pnpm install",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build",
    "prettier": "prettier --write .",
    "lint": "prettier --check .",
    "install:global": "pnpm run build && pnpm install --global ."
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "chrome",
    "cookies",
    "browser",
    "authentication",
    "cli"
  ],
  "author": "Matthew Herod",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^11.2.1",
    "consola": "3.2.3",
    "cross-fetch": "^4.0.0",
    "destr": "2.0.2",
    "fast-glob": "^3.3.1",
    "jsonwebtoken": "9.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lru-cache": "^7.14.0",
    "minimist": "^1.2.7",
    "tough-cookie": "^4.1.2",
    "undici": "^6.20.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/bun": "^1.1.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/minimist": "^1.2.2",
    "@types/node": "^22.5.1",
    "@types/tough-cookie": "^4.0.2",
    "@types/user-agents": "^1.0.2",
    "@vitest/coverage-v8": "^2.0.5",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vitest": "^2.0.5"
  }
}
